@model LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-6 col-lg-4">
        <div class="card glass-effect p-4">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-user-circle fa-4x text-purple mb-3"></i>
                    <h2 class="card-title text-purple fw-bold">Bienvenido</h2>
                    <p class="text-muted">Inicia sesión para acceder a tu cuenta</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-envelope text-purple"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-start-0"
                                   placeholder="Correo electrónico" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-lock text-purple"></i>
                            </span>
                            <input asp-for="Password" class="form-control border-start-0"
                                   placeholder="Contraseña" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Recordar mi sesión
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <strong>Demo:</strong> admin@example.com / 123456
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .input-group-text {
        border-radius: 15px 0 0 15px;
    }

    .form-control {
        border-radius: 0 15px 15px 0;
    }

    .animate__animated {
        animation-duration: 0.8s;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}