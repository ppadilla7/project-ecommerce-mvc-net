@model List<Product>
@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

<!-- Mostrar mensaje de éxito si existe -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card glass-effect">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="card-title text-purple mb-1">
                                <i class="fas fa-box me-2"></i>Catálogo de Productos
                            </h1>
                            <p class="text-muted mb-0">Gestiona tu inventario de productos</p>
                        </div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Producto
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card glass-effect text-center py-5">
                    <div class="card-body">
                        <div class="mb-4">
                            <i class="fas fa-box-open fa-5x text-purple opacity-50"></i>
                        </div>
                        <h3 class="text-purple mb-3">¡Tu catálogo está vacío!</h3>
                        <p class="text-muted mb-4">
                            Parece que aún no has agregado productos a tu tienda.
                            Comienza agregando tu primer producto para empezar a vender.
                        </p>
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>Crear Primer Producto
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cards de sugerencias -->
        <div class="row mt-5">
            <div class="col-md-4 mb-3">
                <div class="card glass-effect h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-lightbulb fa-3x text-warning mb-3"></i>
                        <h5 class="card-title text-purple">Sugerencias</h5>
                        <p class="card-text text-muted">
                            Agrega descripciones detalladas y fotos de alta calidad para atraer más clientes.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card glass-effect h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                        <h5 class="card-title text-purple">Análisis</h5>
                        <p class="card-text text-muted">
                            Una vez que agregues productos, podrás ver estadísticas de ventas y rendimiento.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card glass-effect h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-rocket fa-3x text-info mb-3"></i>
                        <h5 class="card-title text-purple">Optimización</h5>
                        <p class="card-text text-muted">
                            Organiza tus productos en categorías para facilitar la navegación de tus clientes.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Estadísticas rápidas -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card glass-effect text-center">
                    <div class="card-body">
                        <i class="fas fa-box fa-2x text-info mb-2"></i>
                        <h4 class="text-purple">@Model.Count</h4>
                        <p class="text-muted mb-0">Productos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card glass-effect text-center">
                    <div class="card-body">
                        <i class="fas fa-dollar-sign fa-2x text-success mb-2"></i>
                        <h4 class="text-purple">$@Model.Sum(p => p.Price).ToString("F2")</h4>
                        <p class="text-muted mb-0">Valor Total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card glass-effect text-center">
                    <div class="card-body">
                        <i class="fas fa-chart-bar fa-2x text-warning mb-2"></i>
                        <h4 class="text-purple">$@(Model.Count > 0 ? Model.Average(p => p.Price).ToString("F2") : "0.00")</h4>
                        <p class="text-muted mb-0">Precio Promedio</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card glass-effect text-center">
                    <div class="card-body">
                        <i class="fas fa-star fa-2x text-danger mb-2"></i>
                        <h4 class="text-purple">@(Model.Count > 0 ? Model.OrderByDescending(p => p.Price).First().Name.Substring(0, Math.Min(10, Model.OrderByDescending(p => p.Price).First().Name.Length)) : "N/A")</h4>
                        <p class="text-muted mb-0">Más Caro</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de productos -->
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card glass-effect h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;"
                             onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen';">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-purple">@product.Name</h5>
                            <p class="card-text flex-grow-1">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <span class="h5 text-success mb-0">$@product.Price.ToString("F2")</span>
                                <span class="badge bg-primary">ID: @product.Id</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .animate-fade-in {
        animation: fadeIn 0.8s ease-in;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }
</style>